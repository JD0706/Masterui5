<mvc:View controllerName="logaligroup.invoices.controller.HelloPanel"
           xmlns="sap.m"
           xmlns:core="sap.ui.core"
           xmlns:mvc="sap.ui.core.mvc">
         <Panel
            headerText="{i18n>helloPanel}"  class="sapUiresponsiveMargin"  width="auto"  >
            <content>
                <Button
                    text="{i18n>showHelloButton}"  press="onShowHello" />
                <Input
                    value="{/recipient/name}"  width="30%"  valueLiveUpdate="true"  />
                <Text
                    text="{/recipient/name} "  class="sapUiTinyMargin" />
            </content>
            <core:Fragment fragmentName="logaligroup.invoices.view.Form01" type="XML" />
        </Panel>
     
</mvc:View>           