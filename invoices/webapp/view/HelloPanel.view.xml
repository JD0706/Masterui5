<mvc:View  controllerName="logaligroup.invoices.controller.HelloPanel"
              xmlns:mvc = "sap.ui.core.mvc" displayBlock="true"
                xmlns = "sap.m"
                xmlns:core="sap.ui.core">
                       
               <Panel headerText= "{i18n>helloPanel}" class="sapUiResponsiveMargin" width="auto">
                  <content>
                  <Button text="{i18n>HelloDialgButton}" 
                       icon="sap-icon://action"
                   press= ".onOpenDialog" class="sapUiSmallMarginEnd"></Button>
                  
                  <Button text="{i18n>showHelloButtonText}"  press= ".onShowHello" class="sapUiSmallMarginEnd"></Button>
                  <Input value ="{/recipient/name}" valueLiveUpdate="true" width="60%" />
                   <Text  text= "Hello {/recipient/name}" class = "sapUiTinyMargin boldElements sapthemeHighlight-asColor"  > </Text>
                 </content>
                 <core:Fragment fragmentName="logaligroup.invoices.view.Form01" type="XML" />
              </Panel> 



  </mvc:View>            