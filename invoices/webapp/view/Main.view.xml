<mvc:View controllerName="logaligroup.invoices.controller.Main"
        xmlns="sap.m"
        xmlns:mvc="sap.ui.core.mvc">
        <Page id="page" title="{i18n>title}">
        <Panel headerText="{i18n>helloPanel}" class="sapUiresponsiveMargin" width="auto" >
             <content>
                   <Button text="{i18n>showHelloButton}" press="onShowHello"></Button>
                   <Input value="{/recipient/name}" width="30%" valueLiveUpdate="true"></Input>
                   <Text text="{/recipient/name} " class="sapUiTinyMargin"></Text>
             </content>
              </Panel>
        </Page>
</mvc:View>
