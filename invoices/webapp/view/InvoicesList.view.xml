<mvc:View  controllerName="logaligroup.invoices.controller.InvoicesList" 
              xmlns:mvc="sap.ui.core.mvc" 
             
              xmlns="sap.m">
<List  id="InvoiceList"
      headerText="{i18n>InvoicesListTitle}" 
       class="sapUiResposiveMargin"
        width="auto"
        items="{ path:'northwind>/Invoices',
           sorter :{
            path: 'ShipperName',
            group:true
            
           }
             }">
        <headerToolbar>
         <Toolbar >
             <Title text= "{i18n>invoicesListTitle}"/>
               <ToolbarSpacer />
               <SearchField width="50%" search = "onFilterInvoices" ></SearchField>
          </Toolbar>
        </headerToolbar>
       <items>
          <ObjectListItem title="{northwind>Quantity} x {northwind>ProductName}"
                                  number="{ parts:[{path:'northwind>ExtendedPrice'},
                                   {path:'currency>/usd'}],                  
                                                            type: 'sap.ui.model.type.Currency',
                                                            formatOptions :{
                                                              showMeasure:false
                                                            }
                                                   }" 
                                numberUnit="{currency>/usd}" 
                                numberState="{= ${northwind>ExtendedPrice} > 50 ? 'Success' : 'Error'}"> 
                                
                                <firstStatus>
                                <ObjectStatus text="{path:'northwind>Status',formatter:'.formatter.InvoiceStatus' }" >  
                                 </ObjectStatus>
                                
                                </firstStatus>
                                
                                </ObjectListItem>
                                                               
                                       
                                                                                           
       </items>
       
</List>
</mvc:View>   