<mvc:View
    controllerName="logaligroup.applists.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <content>
            <IconTabBar>
                <items>
                    <IconTabFilter text="{i18n>objecList}">
                        <List items="{path:'/Products',filters:[
                         {path:'Brand',operator:'EQ',value1:'Compaq'}
                        ]}">
                            <items>
                                <ObjectListItem
                                    title="{Material}   {Brand} {Model}"
                                    number="{Price}"
                                    numberUnit="{Currency}"
                                    type="Detail"
                                >
                                    <ObjectAttribute text="{Brand} " />
                                    <ObjectAttribute text="{Weight}" />
                                </ObjectListItem>
                            </items>
                        </List>
                    </IconTabFilter>

                    <IconTabFilter text="{i18n>standardList}">
                     <Select selectedKey="{/typeSelection}">
                        <items>
                          <core:Item key="None" text="{i18n>None}"></core:Item>
                          <core:Item key="MultiSelect" text="{i18n>MultiSelec}"></core:Item>
                          <core:Item key="SingleSelect" text="{i18n>SingleSelect}"></core:Item>
                          <core:Item key="SingleSelectLeft" text="{i18n>SingleSelecLef}"></core:Item>
                          <core:Item key="SingleSelectMaster" text="{i18n>SingleSelectMaster}"></core:Item>
                       </items>
                     </Select>
                      <Button text="{i18n>showSelectionItems}" press ="onSelectedRows" class="sapUiSmallMarginBegin"></Button>
                      <Button text="{i18n>deleteSelectionItems}" press ="onDeleteSelectedRows" class="sapUiSmallMarginBegin"></Button>
                        <List id ="standardList" items="{path:'/Products',sorter:{
                           path:'Brand',descending:false,group:true 
                        },groupHeaderFactory:'.getGroupHeader'}" mode="{/typeSelection}">
                            <items>
                                <StandardListItem
                                    title="{Material}   {Brand} {Model}"
                                    description="{Weight}"
                                    info="{Price} {Currency}"
                                    type="Active"
                                />
                            </items>
                        </List>
                    </IconTabFilter>
                    <IconTabFilter text="{i18n>inputList}">
                        <List items="{/Products}">
                            <items>
                                <InputListItem label="{Brand}">
                                    <Select items="{Properties}">
                                        <core:Item
                                            key="{Id}"
                                            text="{Text}"
                                        />
                                    </Select>
                                </InputListItem>
                            </items>
                        </List>
                    </IconTabFilter>

                    <IconTabFilter text="{i18n>notificationList}">
                        <List items="{/News}">
                            <items>
                                <NotificationListItem
                                    title="{Title}"
                                    description="{Description}"
                                    unread="{Unread}"
                                    authorName="{Author}"
                                    priority="{Priority}"
                                    showCloseButton="{ShowCloseButton}"
                                />
                            </items>
                        </List>
                    </IconTabFilter>

                    <IconTabFilter text="{i18n>customList}">
                        <List items="{/News}">
                            <items>
                                <CustomListItem>
                                    <l:Grid defaultSpan="XL3 L3 M6 S12">
                                        <Text text="{Title}" />
                                        <Text text="{Author}" />
                                        <Text text="{Description}" />
                                    </l:Grid>
                                </CustomListItem>
                            </items>
                        </List>
                    </IconTabFilter>
                </items>
            </IconTabBar>
        </content>
    </Page>
</mvc:View>
