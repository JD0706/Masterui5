<mvc:View controllerName="logaligroup.employees.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
         <content>
          <HBox >
            <Label id="labelEmployee" text="{i18n>labelEmployee}" class="sapUiTinyMargin" ></Label>
            <Input  id="inputEmployee"  value="{jsonCountries>/employeeId}"  maxLength="6"   width="200px"   class="sapUiSmallMarginEnd" ></Input><!-- liveChange="onValidate"-->
            <Label id="labelCountry"  text="{i18n>labelCountry}" class="sapUiTinyMargin" ></Label>
            <Select id="slCountry" selectedKey="{jsonCountries>/countryKey}" items= "{jsonCountries>/listCountry}" forceSelection="false" >
               <items>
                 <core:Item  key="{jsonCountries>key}" text="{jsonCountries>text}"/>
               </items>
             </Select>
            <Button id="btnFilter" text="{i18n>btnFilter}" icon="sap-icon://search" press="onFilter" class = "sapUiSmallMarginMarginEnd"></Button>
            <Button id="btnClearFilter" text="{i18n>btnClearFilter}" icon="sap-icon://clear-filter" press="onClearFilter" class = "sapUiSmallMarginEnd"></Button>
            </HBox>
             <Panel >
                <Table id="tableEmployee" items="{jsonEmployees>/}" >
         <columns>
         <Column  >
          <header>
            <Label text="{i18n>tableId}"/>
          </header>
         </Column >
         <Column  >
          <header>
            <Label text="{i18n>tableName}"/>
          </header>
         </Column >
         <Column >
          <header>
            <Label text="{i18n>tableCountry}"/>
          </header>
         </Column>
         <Column >
          <header>
            <Label text="{i18n>tableCity}"/>
          </header>
         </Column>
         <Column width="100px" >
         <header>
               <Label ></Label>
           </header>
         </Column>
          </columns>
         <items>
          <ColumnListItem  type="Active" press="showPostalCode"  ><!--type="Active" press="showOrders"-->
          <cells>
            <Label text="{jsonEmployees>EmployeeID}" ></Label>
            <Label text="{jsonEmployees>LastName}" ></Label>
            <Label text="{jsonEmployees>Country}" ></Label>
            <Label text="{jsonEmployees>City}" ></Label>
            
           </cells>
           </ColumnListItem>
         </items>
         </Table>
            
             </Panel>
            <HBox >
            
            
            
            </HBox>
         </content>
    </Page>
</mvc:View>
